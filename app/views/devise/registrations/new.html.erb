<h2>Become A Flower!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Type your eMail" %>
  </div>

  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: "Type your Password" %>
  </div>
  <div class="field">
  <%= f.check_box :tos, :required => true%> <%= link_to "Accept T & C", "#" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>


<% end %>

<%= render "devise/shared/links" %>
